{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "plang file (output.c)",
            "type": "lldb",
            "request": "launch",
            "program": "${workspaceFolder}/output.exe",
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "compile test.pog",
            "type": "lldb",
            "request": "launch",
            "terminal": "external",
            "program": "${workspaceFolder}/bin/plang.exe",
            "args": ["test.pog", "test2.pog"],
            "cwd": "${workspaceFolder}",
        },
        {
            "name": "compile minbug.pog",
            "type": "lldb",
            "request": "launch",
            "terminal": "external",
            "program": "${workspaceFolder}/bin/plang.exe",
            "args": ["minbug.pog"],
            "cwd": "${workspaceFolder}",
        },

        {
            "name": "compile minesweeper",
            "type": "lldb",
            "request": "launch",
            "terminal": "external",
            "program": "${workspaceFolder}/bin/plang.exe",
            "args": [
                "src/main.pog",
                "src/renderer.pog",
                "../plang/common/basic.pog",
                "../plang/common/glfw3.pog",
                "../plang/common/OpenGL.pog",
                "cflags",
                "-lglfw3dll",
            ],
            "cwd": "${workspaceFolder}/../minesweeper",
        },

        {
            "name": "compile glfw_demo",
            "type": "lldb",
            "request": "launch",
            "terminal": "external",
            "program": "${workspaceFolder}/bin/plang.exe",
            "args": ["build", "../common/OpenGL.pog", "../common/glfw3.pog", "cflags",  "-lglfw3dll"],
            "cwd": "${workspaceFolder}/glfw_demo",
        },
        {
            "name": "glfw_demo",
            "type": "lldb",
            "request": "launch",
            "terminal": "external",
            "program": "${workspaceFolder}/glfw_demo/output.exe",
            "cwd": "${workspaceFolder}/glfw_demo",
        }
    ]
}